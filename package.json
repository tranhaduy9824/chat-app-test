{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "concurrently --kill-others-on-fail \"npm run server\" \"npm run socket\"",
    "server": "node --unhandled-rejections=strict server/index.js",
    "socket": "node --unhandled-rejections=strict socket/index.js",
    "build": "npm install --prefix client && npm run build --prefix client",
    "install:all": "npm install && npm install --prefix client && npm install --prefix server && npm install --prefix socket",
    "postinstall": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "14.x"
  },
  "dependencies": {
    "express": "^4.19.2",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^2.0.22"
  }
}
